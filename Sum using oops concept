import java.util.Scanner;

public class Sum {
    int n;

    void input() {
        int ans = 0;
        for (int i = 1; i <= n; i++) {
            ans = ans + i;
        }
        System.out.println(" " + ans);
    }

    void display() {
        System.out.println("Enter the natural number");
        Scanner in = new Scanner(System.in);
        n = in.nextInt();
    }

    public static void main(String[] args) {
        Sum obj = new Sum();
        obj.display();
        obj.input();
    }
}
